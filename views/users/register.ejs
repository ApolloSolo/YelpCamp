<% layout('layout/boilerplate') %> 

<div class="container d-flex justify-content-center align-items-center mt-3">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <img class="card-img-top" src="https://media.istockphoto.com/photos/tourist-with-backpack-at-mountain-lake-background-picture-id1277142237?b=1&k=20&m=1277142237&s=170667a&w=0&h=AgXsgbj033fxbWYrSkSh1kWGfyBzTA3zxl9-CjRHuls=">
                <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form action="/register" method="post" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <button class="btn btn-success">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>